<div class="container">
  <h3 class="text-center mb-4">『<%= @review.caption %>』<%= @review.user.name %>さんのレビュー</h3>
  <h5 class="container mt-4 mb-4">「<%= @review.genre.name %>」の映画</h5>
</div>

<%= form_with(model: @review, local: true) do |f| %>
  
  <div class="d-flex justify-content-center">  
    <div class="card" style="width: 700px;">
      <div class="d-flex justify-content-center">
        <div class="card border border-0" style="width: 500px;">
          <div class="card-body">
            <div class="form-group">
              <%= f.label :movietitle, "作品タイトル" %>
              <%= f.text_field :movietitle, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :caption, "レビュータイトル" %>
              <%= f.text_field :caption, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="card border border-0" style="width: 200px;">
          <div class="card-body">
            <div class="card-text" style="width: 149px; height: 210px;" >
              <% if @review.image? %>                                                              
                <%= image_tag @review.image.url %>
              <% else %>
                作品画像
              <% end %>
            </div>
            <div class="card-text"><%= f.label "画像を登録" %><br><%= f.file_field :image %></div>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="form-group">
          <%= f.label :content, "レビュー内容" %>
          <%= f.text_area :content, :size=>"300×300", class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="card" style="width: 300px;">
      <div class="card-body">
        <div class="form-group">
          <%= f.label :date, "公開日", class: "control-label" %>
          <%= f.date_field :date, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :country, "製作国", class: "control-label" %>
          <%= f.text_field :country, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :time, "上映時間" %>
          <%= f.text_field :time, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :director, "監督" %>
          <%= f.text_field :director, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :cast, "キャスト" %>
          <%= f.text_area :cast, :size=>"300×50", class: "form-control" %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="d-inline-flex mt-4">
    <%= link_to "戻る", review_path(@review), class: "btn btn-primary" %>
      <%= f.submit "更新", class: "btn btn-primary" %>
  </div>
  
<% end %>