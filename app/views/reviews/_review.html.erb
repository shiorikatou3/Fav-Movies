<div class="container">
  <div class="row">
    <% reviews.each do |review| %>
    <div class="col-xl-6">
      <div class="card" style="width: 500px;">
        <h6 class="card-title text-center mt-3">「<%= review.genre.name =%>」の映画</h6>
        <div class="d-flex justify-content-center">
          <div class="card border border-0" style="width: 350px;">
            <div class="card-body">
              <div class="media">
                <div class="media-left media-top">
                  <div class="mr-2 rounded media-object">
                    <%= image_tag review.user.image.icon.url, size: "40x40" %>
                  </div>
                </div>
                <div class="media-body">
                  <p><%= link_to review.user.name, user_path(review.user) %>@<%= review.user.favmoviesid %></br>
                  <small class="text-muted"><%= review.updated_at.strftime("%Y-%m-%d") %></small></p>
                </div>
              </div>
              <h6 class="card-text"><%= link_to review.caption, review_path(review) %></h6>
              <p class="card-text"><%= review.content.truncate(50) %>
            </div>
          </div>
          <div class="card border border-0" style="width: 150px;">
            <div class="card-body">
              <div class="card-text" style="width: 106px; height: 150px;" >
                <%= image_tag review.image.movie.url, size: "106x150" %>
              </div>
              <div class="card-text"><%= review.movietitle %></div>
            </div>
          </div>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item small d-flex justify-content-left">
            <% if logged_in? %>
              <%= render "favorites/favorite_button", review: review %>
              <%= link_to "コメント#{review.comments.count}", review_path(review), class: "btn btn-outline-secondary btn-sm" %>
            <% else %>
              <%= link_to "♡いいね!#{review.liked.count}", login_path, class: "btn btn-outline-secondary btn-sm" %>
              <%= link_to "コメント#{review.comments.count}", login_path, class: "btn btn-outline-secondary btn-sm" %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <% end %>
  </div>
</div>
