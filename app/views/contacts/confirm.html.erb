<%= render "layouts/jumbotron" %>

<div class="text-center mt-5">
  <h4>お問い合わせ</h4>
</div>

<div class="container p-4 mt-4 mb-4">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      
      <div class="mb-5">
        以下の内容で送信して宜しいですか？
      </div>
      
      <%= form_with(model: @contact, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :name, "お名前" %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      
        <div class="form-group">
          <%= f.label :message, "ご意見・ご要望" %>
          <%= f.text_area :message, class: "form-control" %>
        </div>
      <% end %>
      
      <div class="container p-0">
        <div class="d-flex justify-content-between mt-5 mb-4">
          <%= form_with(model: @contact, url: contacts_back_path, local: true) do |f| %>
            <%= f.hidden_field :name %>
            <%= f.hidden_field :message %>
            <div><%= f.submit "入力画面に戻る", class: "btn btn-info" %></div>
          <% end %>
          <%= form_with(model: @contact, url: contacts_path, local: true) do |f| %>
            <%= f.hidden_field :name %>
            <%= f.hidden_field :message %>
            <div><%= f.submit "送信する", class: "btn btn-info" %></div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>











